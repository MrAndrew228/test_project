* {
	box-sizing border-box
	margin 0
	padding 0
}

body {
	color: #58809d
}

.container {
	max-width 1140px
	width 100%
	margin 0 auto
	@media screen and (max-width: 1224px) {
		max-width 100%
		padding 0 5%
	}
}

.wrap-events {
	padding 40px 0
	margin-left -15px
	margin-right -15px
	row-gap 30px

	.wrap-event {
		padding 0 15px

		.wrap-image {
			height 250px
			width 100%
			background-size cover
			background-position 50% 50%
			margin-bottom 10px
		}

		.event-title {
			margin 5px 0
			display block
		}
	}
}


  

